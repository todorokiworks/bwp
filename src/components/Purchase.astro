---
import { useTranslations, type Lang } from "@/i18n";
import { getRelativeLocaleUrl } from "astro:i18n";
const t = useTranslations(Astro.currentLocale as Lang);

import AstroImage from "@/assets/astro-logo.svg";

const locale = Astro.currentLocale as Lang;

const isActive = (path: string) =>
    getRelativeLocaleUrl(locale, path) === Astro.url.pathname;
---

<section id="purchase">
    <div class="contents">
        <div class="image">
            <img src="/img/product_purchese.jpg" alt="" />
        </div>
        <div class="info">
            <h2>
                {
                    t({
                        ja: "製品情報と購入情報",
                        en: "Information",
                    })
                }
            </h2>
            <p>
                {
                    t({
                        ja: "プロの現場でも使用される品質：歯科医院での使用を想定し、",
                        en: "Quality used in professional settings: Designed for ",
                    })
                }<br />
                {
                    t({
                        ja: "専門家も信頼するホワイトニングパウダーです!",
                        en: "use in dental clinics, a whitening powder trusted by experts",
                    })
                }
            </p>
            <ul class="info-list">
                <li>
                    <span>
                        {
                            t({
                                ja: "商品名",
                                en: "Product name",
                            })
                        }
                    </span>
                    {
                        t({
                            ja: "ビューティホワイトパウダー（20g）",
                            en: "Beauty white powder (20g)",
                        })
                    }
                </li>
                <li>
                    <span>
                        {
                            t({
                                ja: "カテゴリー",
                                en: "Category",
                            })
                        }
                    </span>
                    {
                        t({
                            ja: "口腔化粧品",
                            en: "oral cosmetics",
                        })
                    }
                </li>
                <li>
                    <span>
                        {
                            t({
                                ja: "販売価格",
                                en: "Price",
                            })
                        }
                    </span>
                    {
                        t({
                            ja: "18,000円（税込）",
                            en: "¥18,000（Tax included）",
                        })
                    }
                </li>
            </ul>
            <a
                href="https://cocoashiya18.thebase.in/p/00002"
                target="_blank"
                class="btn"
            >
                {
                    t({
                        ja: "ご購入",
                        en: "Purchase",
                    })
                }
            </a>
        </div>
    </div>
</section>

{
    locale === "en" ? (
     <style lang="scss">
