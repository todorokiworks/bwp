                }
            }
            div.info {
                width: 50%;
                display: flex;
                justify-content: center;
                align-items: center;
                flex-direction: column;
                 @media (max-width: 767px) {
                width: 100%;
                padding: 40px 20px;
                }
                h2 {
                    font-size: 60px;
                    font-weight: bold;
                    line-height: 1.25;
                    margin-bottom: 40px;
                    position: relative;
                    z-index: 9;
                    text-align: center;
                      @media (max-width: 767px) {
                        font-size: 36px;
                    }
                }
                p {
                    text-align: center;
                    font-size: 20px;
                    font-weight: bold;
                    margin-bottom: 40px;
                      @media (max-width: 767px) {
                        font-size: 16px;
                    }
                }
                ul.info-list {
                    margin-bottom: 40px;
                    li {
                        font-size: 18px;
                        border-bottom: 2px solid var(--darkBlue);
                        margin-bottom: 10px;
                        padding-bottom: 10px;
                          @media (max-width: 767px) {
                        font-size: 14px;
                    }
                        span {
                            font-size: 20px;
                            font-weight: bold;
                            margin-right: 40px;
                            min-width: 100px;
                            display: inline-block;
                              @media (max-width: 767px) {
                        font-size: 14px;
                         min-width: 70px;
                          margin-right: 20px;
                    }
                        }
                    }
                }
                a.btn {
                    width: 350px;
                    padding: 20px 0;
                     @media (max-width: 767px) {
