---
import { useTranslations, type Lang } from "@/i18n";

import { getRelativeLocaleUrl } from "astro:i18n";
const t = useTranslations(Astro.currentLocale as Lang);

import AstroImage from "@/assets/astro-logo.svg";
import LocaleSelect from "./i18n/LocaleSelect.astro";

const locale = Astro.currentLocale as Lang;

const isActive = (path: string) =>
    getRelativeLocaleUrl(locale, path) === Astro.url.pathname;
---

<footer id="footer">
    <div class="cInner">
        <p>BEAUTY WHITE POWDER</p>
        <ul class="info">
            <li>
                <span>
                    {
                        t({
                            ja: "販売元",
                            en: "Distributor",
                        })
                    }
                </span>
                {
                    t({
                        ja: "COCO ASHIYA",
                        en: "COCO ASHIYA",
                    })
                }
            </li>
            <li>
                <span>
                    {
                        t({
                            ja: "住所",
                            en: "Address",
                        })
                    }
                </span>
                {
                    t({
                        ja: "兵庫県芦屋市大原町 15-18 芦屋大原ビル３階",
                        en: "3rd Floor, Ashiya Ohara Building, 15-18 Ohara-cho,",
                    })
                }<br />
                {
                    t({
                        ja: "",
                        en: "Ashiya City, Hyogo Prefecture, Japan",
                    })
                }
            </li>
            <li>
                <span>
                    {
                        t({
                            ja: "メールアドレス",
                            en: "Mail Address",
                        })
                    }
                </span>
                <a href="mailto:info@cocoashiya.com">info@cocoashiya.com</a>
            </li>
            <li>
                <span>
                    {
                        t({
                            ja: "電話番号",
                            en: "Phone",
                        })
                    }
                </span>
                <a href="tel:0797357779">0797-35-7779</a>
            </li>
        </ul>
        <nav>
            <ul>
                <li>
                    <a href="#feature">
                        {
                            t({
                                ja: "特徴",
                                en: "Feature",
                            })
                        }
                    </a>
                </li>
                <li>
                    <a href="#ingredients">
                        {
                            t({
                                ja: "成分",
                                en: "Ingredient",
                            })
                        }
                    </a>
                </li>
                <li>
                    <a href="#domestic">
                        {
                            t({
                                ja: "こだわり",
                                en: "Made in Japan",
                            })
                        }
                    </a>
                </li>
                <li>
                    <a href="#use">
                        {
                            t({
                                ja: "使用方法",
                                en: "How to use",
                            })
                        }
                    </a>
                </li>
                <li>
                    <a href="#voice">
                        {
                            t({
                                ja: "お客様の声",
                                en: "Testimonials",
                            })
                        }
                    </a>
                </li>
                <li>
                    <a href="#contact">
                        {
                            t({
                                ja: "お問い合わせ",
                                en: "Inquiry",
                            })
                        }
                    </a>
                </li>
            </ul>
        </nav>

        <p class="copyright">
            &copy; Beauty White Powder {new Date().getFullYear()}.
        </p>
    </div>
</footer>

<a class="btnTop" href="#mv">TOP</a>

<style lang="scss">
    footer#footer {
        background: #e0ecff;
        div.cInner {
            padding: 80px 0 1px;
            @media (max-width: 767px) {
                padding: 80px 20px 1px;
            }
            p {
                font-size: 24px;
                font-weight: bold;
                text-align: center;
                margin-bottom: 40px;
                @media (max-width: 767px) {
                    font-size: 18px;
                    margin-bottom: 60px;
                }
            }

            .info {
                display: flex;
                justify-content: center;
                flex-direction: column;
                align-items: center;
                gap: 15px;
                margin-bottom: 40px;
                span {
                    font-weight: bold;
                    display: block;
                    text-align: center;
                }
            }
            nav {
                margin-bottom: 80px;
                ul {
                    display: flex;
                    justify-content: center;
                    gap: 30px;
                    @media (max-width: 767px) {
                        flex-direction: column;
                        align-items: center;
                        gap: 20px;
                    }
                    li {
                        a {
                            font-size: 18px;
                            font-weight: bold;
                            transition: all 0.3s;
                            &:hover {
                                color: #0c67b9;
                            }
                            @media (max-width: 767px) {
                                font-size: 14px;
                            }
                        }
                    }
                }
            }
            .copyright {
                text-align: center;
                font-size: 12px;
            }
        }
    }

    .btnTop {
        position: fixed;
        bottom: 10px;
        right: 10px;
        background: var(--darkBlue);
        color: #fff;
        font-size: 14px;
        font-weight: 500;
        border-radius: 5px;
        width: 65px;
        height: 65px;
        padding: 10px;
        display: flex;
        justify-content: center;
        align-items: center;
        z-index: 999;
    }
</style>
