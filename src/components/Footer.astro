---
import LocalesHomeList from "@/components/i18n/LocalesHomeList.astro";
const nav = [
    {
        name: "特徴",
        link: "#feature",
    },
    {
        name: "成分",
        link: "#ingredients",
    },
    {
        name: "こだわり",
        link: "#domestic",
    },
    {
        name: "使用方法",
        link: "#use",
    },
    {
        name: "お客様の声",
        link: "#voice",
    },
];
---

<footer id="footer">
    <div class="cInner">
        <p>BEAUTY WHITE POWDER</p>
        <nav>
            <ul>
                {
                    nav.map((el) => (
                        <li>
                            <a href={el.link}>{el.name}</a>
                        </li>
                    ))
                }
            </ul>
        </nav>
        <ul>
            <LocalesHomeList />
        </ul>

        <p class="copyright">
            coryright Beauty White Powder All Rights Reserved.
        </p>
    </div>
</footer>

<style lang="scss">
    footer#footer {
        background: #e0ecff;
        div.cInner {
            padding: 80px 0 1px;
            p {
                font-size: 24px;
                font-weight: bold;
                text-align: center;
                margin-bottom: 80px;
            }
            nav {
                margin-bottom: 80px;
                ul {
                    display: flex;
                    justify-content: center;
                    gap: 30px;
                    li {
                        a {
                            font-size: 18px;
                            font-weight: bold;
                        }
                    }
                }
            }
            .copyright {
                text-align: center;
                font-size: 12px;
            }
        }
    }
</style>
