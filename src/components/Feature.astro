---
const lists = [
    {
        ttl: "美白効果",
        txt: `歯の表面に光を反射し、<br>一時的に歯を明るく見せる<br>光学効果。`,
    },
    {
        ttl: "再石灰化促進",
        txt: `歯のエナメル質に<br>自然な成分を再吸収させ、<br>微細な傷を修復。`,
    },
    {
        ttl: "保護効果",
        txt: `酸に強い保護層を形成し、<br>歯をしっかりガード。`,
    },
    {
        ttl: "ステイン除去",
        txt: `微粒子がコーヒーやワインなどに<br>よる着色汚れを物理的に除去し、<br>再付着を防ぐ。`,
    },
];

import { useTranslations, type Lang } from "@/i18n";
import { getRelativeLocaleUrl } from "astro:i18n";
const t = useTranslations(Astro.currentLocale as Lang);

import AstroImage from "@/assets/astro-logo.svg";

const locale = Astro.currentLocale as Lang;

const isActive = (path: string) =>
    getRelativeLocaleUrl(locale, path) === Astro.url.pathname;
---

<section id="feature">
    <div class="cInner">
        <h2>
            {
                t({
                    ja: "Beauty White Powder",
                    en: "Beauty White Powder",
                })
            }
            <span>
                {
                    t({
                        ja: "の特長と効果",
                        en: "Features and effects",
                    })
                }
            </span>
        </h2>
        <div class="list">
            <div class="item">
                <div class="item-ttl">
                    {
                        t({
                            ja: "美白効果",
                            en: "Whitening Effect",
                        })
                    }
                </div>

                <div class="item-txt">
                    {
                        t({
                            ja: "歯の表面に光を反射し、一時的に歯を明るく見せる光学効果。",
                            en: "Reflects light on the surface of the teeth, creating a temporary brightening optical effect for a radiant smile.",
                        })
                    }
                </div>
            </div>
            <div class="item">
                <div class="item-ttl">
                    {
                        t({
                            ja: "再石灰化促進",
                            en: "Promotes Remineralization",
                        })
                    }
                </div>

                <div class="item-txt">
                    {
                        t({
                            ja: "歯のエナメル質に自然な成分を再吸収させ、微細な傷を修復。",
                            en: "Helps reabsorb natural minerals into the enamel, repairing minor damage and enhancing strength.",
                        })
                    }
                </div>
            </div>
            <div class="item">
                <div class="item-ttl">
                    {
                        t({
                            ja: "保護効果",
                            en: "Protective Barrier",
                        })
                    }
                </div>

                <div class="item-txt">
                    {
                        t({
                            ja: "微粒子がコーヒーやワインなどによる着色汚れを物理的に除去し、再付着を防ぐ。",
                            en: "Forms an acid-resistant protective layer to guard teeth against harmful substances.",
                        })
                    }
                </div>
            </div>
            <div class="item">
                <div class="item-ttl">
                    {
                        t({
                            ja: "ステイン除去",
                            en: "Stain Removal",
                        })
                    }
                </div>

                <div class="item-txt">
                    {
                        t({
                            ja: "歯の表面に光を反射し、一時的に歯を明るく見せる光学効果。",
                            en: "Fine particles physically eliminate discoloration caused by coffee, wine, and other stains, while preventing further buildup.",
                        })
                    }
                </div>
            </div>
        </div>
        <div class="recommend">
            <p>
                {
                    t({
                        ja: "こんな方にオススメです",
                        en: "Recommended For",
                    })
                }
            </p>
            <div class="recommend__inner">
                <ul>
                    <li>
                        {
                            t({
                                ja: "コーヒー・紅茶等による歯の着色が気になる方",
                                en: "Those who concern about tooth discoloration caused by coffee, tea, and other beverages.",
                            })
                        }
                    </li>
                    <li>
                        {
                            t({
                                ja: "歯の白さを持続したい方",
                                en: "Those who want to maintain long-lasting whiteness of their teeth.",
                            })
                        }
                    </li>
                    <li>
                        {
                            t({
                                ja: "口の臭いが気になる方",
                                en: "Those who worried about bad breath and seeking fresher oral hygiene.",
                            })
                        }
                    </li>
                </ul>
            </div>
        </div>
    </div>

